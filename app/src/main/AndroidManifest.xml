<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.gov.rajasthan.bhamashah.bhamashah">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.HomeActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/LoginScreen" />
        <activity
            android:name=".hospital.HospitalsActivity"
            android:parentActivityName=".home.HomeActivity" />
        <activity
            android:name=".hospital.HospitalDetailsActivity"
            android:parentActivityName=".hospital.HospitalsActivity" />
        <activity android:name=".hospital.BookAppointmentActivity" />
        <activity android:name=".hospital.MyAppointmentsActivity" />
        <activity
            android:name=".job.JobsActivity"
            android:parentActivityName=".home.HomeActivity" />
        <activity
            android:name=".job.JobDetailsActivity"
            android:parentActivityName=".job.JobsActivity" />
    </application>

</manifest>